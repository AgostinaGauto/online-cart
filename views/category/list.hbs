<div class="row">
    <div class="col-12">
        <h2 class="mb-4">{{titulo}}</h2>

        {{!-- ========== MENSAJES FLASH ========== --}}
        {{#if success_msg}}
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-check-circle-fill"></i> {{success_msg}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {{/if}}

        {{#if error_msg}}
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> {{error_msg}}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {{/if}}
        {{!-- ================================== --}}

        <div class="d-flex justify-content-between mb-3">
            <a href="/category/create" class="btn btn-primary shadow-sm">
                <i class="bi bi-plus-circle-fill"></i> Nueva Categoría
            </a>

            {{!-- buscador y paginación futura --}}
        </div>

        {{#if categories.length}}
        <div class="card shadow">
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="py-3 px-4" style="width: 10%;">ID</th>
                            <th scope="col" class="py-3 px-4" style="width: 60%;">Nombre</th>
                            <th scope="col" class="text-center py-3 px-4" style="width: 30%;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each categories}}
                        <tr>
                            <th scope="row" class="align-middle py-3 px-4">{{category_id}}</th>
                            <td class="align-middle py-3 px-4">{{name}}</td>
                            <td class="text-center align-middle py-3 px-4">
                                <div class="d-flex justify-content-center">

                                    <a href="/category/edit/{{category_id}}" class="btn btn-sm btn-info text-white me-2 shadow-sm" title="Editar">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>

                                    <form action="/category/delete/{{category_id}}" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger shadow-sm" title="Eliminar" 
                                            onclick="return confirm('¿Está seguro de eliminar la categoría: {{name}}?');">
                                            <i class="bi bi-trash"></i> Eliminar
                                        </button>
                                    </form>

                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        {{!-- =================== PAGINACIÓN (si la usás) =================== --}}
        {{#if lastPage}}
            {{#if (gt lastPage 1)}}
                <nav aria-label="Paginación de Categorías" class="mt-4">
                    <ul class="pagination justify-content-center">

                        <li class="page-item {{#unless hasPreviousPage}}disabled{{/unless}}">
                            <a class="page-link" href="/categorias?page={{previousPage}}" aria-label="Anterior">
                                <span aria-hidden="true">&laquo;</span> Anterior
                            </a>
                        </li>

                        <li class="page-item disabled">
                            <span class="page-link text-dark bg-light border-secondary">
                                Pág. {{currentPage}} de {{lastPage}}
                            </span>
                        </li>

                        <li class="page-item {{#unless hasNextPage}}disabled{{/unless}}">
                            <a class="page-link" href="/categorias?page={{nextPage}}" aria-label="Siguiente">
                                Siguiente <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>

                    </ul>
                </nav>
            {{/if}}
        {{/if}}
        {{!-- ============================================================= --}}
        
        {{else}}
        <div class="alert alert-info shadow-sm mt-3">
            No hay categorías registradas. ¡Crea la primera!
        </div>
        {{/if}}
    </div>
</div>