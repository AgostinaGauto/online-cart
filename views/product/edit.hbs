<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4">{{titulo}}</h2>
        
        {{> messages}}

        <div class="card shadow-lg p-4">
            {{!  La ruta debe ser POST a /productos/editar/:id y debe llevar enctype  }}
            <form action="/product/edit/{{product.product_id}}" method="POST" enctype="multipart/form-data">

                {{! Campo: Nombre del Producto }}
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre del Producto</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{product.name}}" required>
                </div>

                {{! Campo: Categoría }}
                <div class="mb-3">
                    <label for="category" class="form-label">Categoría</label>
                    <select class="form-select" id="category" name="category" required>
                        <option value="">Seleccione una Categoría</option>
                        {{#each categories}}
                            {{! Selecciona la categoría actual del producto }}
                            <option value="{{this.category_id}}" {{#if (eq ../product.category this.category_id)}}selected{{/if}}>
                                {{this.name}}
                            </option>
                        {{/each}}
                    </select>
                </div>

                <div class="row">
                    {{! Campo: Precio }}
                    <div class="col-md-6 mb-3">
                        <label for="price" class="form-label">Precio ($)</label>
                        <input type="number" step="0.01" min="0.01" class="form-control" id="price" name="price" value="{{product.price}}" required>
                    </div>

                    {{! Campo: Stock }}
                    <div class="col-md-6 mb-3">
                        <label for="stock" class="form-label">Stock Actual</label>
                        <input type="number" min="0" class="form-control" id="stock" name="stock" value="{{product.stock}}" required>
                    </div>
                </div>

                {{! Campo: Stock Mínimo }}
                <div class="mb-3">
                    <label for="minimum_stock" class="form-label">Stock Mínimo</label>
                    <input type="number" min="0" class="form-control" id="minimum_stock" name="minimum_stock" value="{{product.minimum_stock}}" required>
                    <div class="form-text">Se generará una alerta si el stock cae por debajo de este valor.</div>
                </div>

                {{! Campo: Imagen Actual y Carga de Nueva Imagen }}
                <div class="mb-3">
                    <label for="image" class="form-label">Cambiar Imagen</label>
                    <input type="file" class="form-control" id="image" name="image" accept="image/*">
                    <div class="form-text">Deje este campo vacío para conservar la imagen actual.</div>

                    {{#if product.image}}
                        <div class="mt-2">
                            <p>Imagen actual:</p>
                            <img src="/uploads/products/{{product.image}}" 
                                alt="{{product.name}}" 
                                class="img-thumbnail" 
                                style="max-width: 150px; height: auto;">
                        </div>
                    {{/if}}
                </div>
                
                <hr>

                <div class="d-flex justify-content-between mt-4">
                    <a href="/product/list" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-warning text-white">
                        <i class="bi bi-arrow-up-circle"></i> Actualizar Producto
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>